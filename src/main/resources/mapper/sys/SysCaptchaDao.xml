<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">    
<mapper namespace="com.cxf.modules.sys.dao.SysCaptchaDao">

	<!-- 根据key，查询value -->
	<select id="getCaptcha" parameterType="string" resultType="com.cxf.modules.sys.entity.SysCaptchaEntity">
		select * from sys_captcha where uuid = #{uuid}
	</select>
	
	<!-- insert -->
	<insert id="save" parameterType="com.cxf.modules.sys.entity.SysCaptchaEntity">
		insert into sys_captcha(uuid, code, expire_time) value(#{uuid}, #{code}, #{expireTime})
	</insert>

	<delete id="removeById">
		delete from sys_captcha where uuid = #{uuid}
	</delete>
	
</mapper>